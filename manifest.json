{
  "manifest_version": 3,
  "name": "Amazon Nebula Utility",
  "version": "1.0",
  "description": "Automates Amazon Seller Central page monitoring",
  "icons": {
    "128": "assets/android-chrome-512x512.png"
  },
  "permissions": [
    "tabs",
    "activeTab",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "https://sellercentral.amazon.com/*",
    "https://script.google.com/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "assets/android-chrome-512x512.png"
  }
}