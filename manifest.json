{
  "manifest_version": 3,
  "name": "Nebula Suite (Chrome Extension)",
  "short_name": "POD Utility",
  "version": "1.0.0",
  "description": "Automates Amazon Seller Central page monitoring",
  "icons": {
    "16": "assets/icon16.png",
    "32": "assets/icon32.png",
    "180": "assets/icon180.png",
    "192": "assets/icon192.png",
    "512": "assets/icon512.png"
  },
  "permissions": [
    "tabs",
    "activeTab",
    "scripting",
    "storage"
  ],
 "optional_host_permissions": [],
  "host_permissions": [
    "https://sellercentral.amazon.com/*",
    "https://script.google.com/macros/s/AKfycbxeo81Gxh-dhsM1k_dcGQ1wcnJIrMNotRFZwZl4Sm4fp_75HCSxCGrI8k3qNPfEbVC10A/exec"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "popup.html"
  }
}
